@model WebAppointments.BusinessLogic.Entity.VisitSettings

@{
    ViewData["Title"] = "Create";
}
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
        <div class="row align-items-center py-4">
            <div class="col-lg-6 col-7">
                <h6 class="h2 text-white d-inline-block mb-0">Visit Settings</h6>
                <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                    <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                    <li class="breadcrumb-item"><a href="~/"><i class="fas fa-home"></i></a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Visit Settings</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create Settings</li>
                    </ol>
                </nav>
            </div>
        </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Create Visit Settings</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" asp-for="WindowPeriod">Window Period</label>
                                        <input asp-for="WindowPeriod" class="form-control" />
                                        <span asp-validation-for="WindowPeriod" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" asp-for="VisitStage">Visit Stage</label>
                                        <input asp-for="VisitStage" class="form-control" />
                                        <span asp-validation-for="VisitStage" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" asp-for="Medication">Medication</label>
                                        <input asp-for="Medication" class="form-control" />
                                        <span asp-validation-for="Medication" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-right">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <partial name="_Footer" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
