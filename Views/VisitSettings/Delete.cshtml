@model WebAppointments.BusinessLogic.Entity.VisitSettings

@{
    ViewData["Title"] = "Delete";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Visit Setting</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="~/"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a asp-controller="VisitSettings" asp-action="Index">Visit Settings</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Delete Visit Setting</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Are you sure you want to delete this?</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2 form-control-label">
                            @Html.DisplayNameFor(model => model.WindowPeriod)
                        </dt>
                        <dd class="col-sm-10 form-control-label">
                            @Html.DisplayFor(model => model.WindowPeriod) days
                        </dd>
                        <dt class="col-sm-2 form-control-label">
                            @Html.DisplayNameFor(model => model.VisitStage)
                        </dt>
                        <dd class="col-sm-10 form-control-label">
                            @Html.DisplayFor(model => model.VisitType)
                        </dd>
                        <dt class="col-sm-2 form-control-label">
                            @Html.DisplayNameFor(model => model.Medication)
                        </dt>
                        <dd class="col-sm-10 form-control-label">
                            @Html.DisplayFor(model => model.Medication)
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>